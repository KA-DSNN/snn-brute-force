#!/bin/bash
# Home directory
# Dockerfile set SBF_HOME variable 
if [ -z "$SBF_HOME" ]
then
    export CONTAINER="false"
    export SBF_HOME=/home/mzp7/workspace/DSNN/snn-feature-generator
else
    export CONTAINER="true"
    export SBF_HOME=$SBF_HOME
fi

# Docker build
export BUILD_DIR=$SBF_HOME
export DOCKERFILE=$SBF_HOME/Dockerfile
export VERSION="0.1.0-alpha"

# Path configuration
export PATH=$PATH:$SBF_HOME

# Main python script
export APP_DIR=$SBF_HOME/app
export APP=$SBF_HOME/app/src/app.py
export DATA_PATH=$SBF_HOME/data
export OUTPUT_PATH=$SBF_HOME/output